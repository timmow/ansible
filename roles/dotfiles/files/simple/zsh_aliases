if type vim8 > /dev/null; then
	alias vim=vim8
	export VISUAL=vim8
	export EDITOR="$VISUAL"
fi
if type nvim > /dev/null; then
	alias vim=nvim
	export VISUAL=nvim
	export EDITOR="$VISUAL"
fi
